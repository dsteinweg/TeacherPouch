@model PhotoDetailsViewModel

@{
    ViewBag.Title = "Edit Photo";
}

<div id="editPhoto">
    <h2>Edit Photo</h2>

    <fieldset>
        <legend>@Model.Photo.Name</legend>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Photo.ID)

            <div><img src="@Url.SmallPhotoUrl(Model.Photo)"></div>

            <div>
                <label for="Name">Name</label>
                <input type="text" name="Name" id="Name" value="@Model.Photo.Name">
            </div>

            <div>
                <label for="IsPrivate">Is Private</label>
                <input type="checkbox" name="IsPrivate" id="IsPrivate" checked="@Model.Photo.IsPrivate">
            </div>

            <div id="tags">
                <label for="Tags">Tags</label>
                @{ Html.RenderPartial(MVC.Tags.Views._TagEditor_Photo, Model.PhotoTags); }
            </div>

            <div>
                <input type="submit" value="Save" /> |
                <a href="@Url.PhotoDetails(Model.Photo)">Cancel</a>
            </div>
        }
    </fieldset>
</div>
