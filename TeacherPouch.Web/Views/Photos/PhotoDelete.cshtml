@model PhotoDetailsViewModel

@{
    ViewBag.Title = "Delete Photo";
}

<h2>Delete Photo</h2>

<h3>Are you sure you want to delete this photo?</h3>

<fieldset>
    <legend>@Model.Photo.Name</legend>

    <div><img src="@Url.LargePhotoUrl(Model.Photo)"></div>

    <div style="margin-top:20px; margin-bottom:20px;">
        @{ Html.RenderPartial(MVC.Tags.Views._TagButtons, Model.PhotoTags); }
    </div>
</fieldset>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        <a href="@Url.PhotoDetails(Model.Photo)">Cancel</a>
    </p>
}
