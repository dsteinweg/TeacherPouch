@model Tag

@{
    ViewBag.Title = "Edit Tag";
}

<div id="tagEdit">
    <h2>Edit Tag</h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Tag: @Model.Name</legend>

            @Html.HiddenFor(model => model.ID)

            <div>
                <label for="Name">Tag Name</label>
                <input type="text" name="Name" id="Name" value="@Model.Name">
            </div>

            <div>
                <label for="IsPrivate">Private</label>
                <input type="checkbox" name="IsPrivate" id="IsPrivate" checked="@Model.IsPrivate">
            </div>

            <div>
                <input type="submit" value="Save" /> | <a href="@Url.TagDetails(Model)">Cancel</a>
            </div>
        </fieldset>
    }
</div>
