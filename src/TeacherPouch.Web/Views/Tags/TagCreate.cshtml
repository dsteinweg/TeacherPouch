@model TagCreateViewModel

@{
    ViewBag.Title = "Create Tag";
}

<div id="createTag">
    <h2>Create Tag</h2>

    <form>
        <div class="form-group">
            <label for="Name">Tag Name</label>
            <input type="text" name="Name" id="Name" value="@Model.TagName">
        </div>

        <div class="form-group">
            <label for="IsPrivate">Private</label>
            <input type="checkbox" name="IsPrivate" id="IsPrivate" checked="@Model.IsPrivate">
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit" value="Create"> |
            <a asp-action="TagIndex">Cancel</a>
        </div>

        @if (!String.IsNullOrWhiteSpace(Model.ErrorMessage)) {
            <div style="color: red;">@Model.ErrorMessage</div>
        }
    </form>
</div>
