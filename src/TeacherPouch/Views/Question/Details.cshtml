@model QuestionDetailsViewModel

@{
    ViewBag.Title = "Question Details";
}

<section class="question-details">
    <header>
        <h1>Question Details</h1>
    </header>

    <div>
        <div>
            <a asp-route="photo-details"
               asp-route-id="@Model.Photo.Id"
               asp-route-name="@Model.Photo.Name"
               class="photo-thumb">
                <img src="@Url.Action("Image", "Photo", new { id = Model.Photo.Id, size = PhotoSizes.Large, fileName = Model.Photo.Name + "_Small.jpg" })">
            </a>
        </div>

        <div style="margin-top: 10px;">
            @Html.Partial("_TagButtons", Model.Tags)
        </div>
    </div>

    <div style="margin-bottom: 20px;">
        <label asp-for="@Model.QuestionText"></label>
        <div class="preserve-newline">@Model.QuestionText</div>
    </div>

    <div style="margin-bottom: 20px;">
        <label asp-for="@Model.QuestionSentenceStarters"></label>
        <div class="preserve-newline">@Model.QuestionSentenceStarters</div>
    </div>

    <div>
        <label asp-for="@Model.QuestionOrder"></label>
        <div>@Model.QuestionOrder</div>
    </div>

    @if (Model.DisplayAdminLinks)
    {
        <div>
            <a asp-action="Edit">Edit</a> |
            <a asp-action="Delete">Delete</a>
        </div>
    }
</section>
