@model QuestionEditViewModel

@{
    ViewBag.Title = "Edit Question";
}

<div class="page-question-edit">
    <header class="page-header" style="margin-top: 0;">
        <h1>Edit Question</h1>
    </header>

    <section>
        <div>
            <partial name="_PhotoThumbSmall" model="Model.Photo" />
        </div>

        <div style="margin-top:10px;">
            <partial name="_TagButtons" model="Model.Tags" />
        </div>
    </section>

    <section>
        <form asp-action="Edit" method="POST">
            <div class="form-group">
                <label asp-for="@Model.QuestionText" class="control-label"></label>
                <textarea asp-for="@Model.QuestionText" rows="6" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="@Model.QuestionSentenceStarters" class="control-label"></label>
                <textarea asp-for="@Model.QuestionSentenceStarters" rows="6" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="@Model.QuestionOrder" class="control-label"></label>
                <textarea asp-for="@Model.QuestionOrder" class="form-control"></textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-link">Cancel</a>
            </div>

            <div asp-asp-validation-summary="true"></div>
        </form>
    </section>
</div>
