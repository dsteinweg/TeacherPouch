@model PhotoDeleteViewModel

@{
    ViewBag.Title = "Delete Photo";
}

<h2>Delete Photo</h2>

<h3>Are you sure you want to delete this photo?</h3>

<fieldset>
    <legend>@Model.Photo.Name</legend>

    <div>
        <img src="@Url.LargePhotoUrl(Model.Photo)">
    </div>

    <div style="margin-top:20px; margin-bottom:20px;">
        <tag-buttons tags="@">
    </div>
</fieldset>

<form asp-action="Delete" method="POST">
    <div class="form-control">
        <button class="btn btn-danger" type="submit">Delete</button> |
        <a asp-action="Details" asp-route-id="@Model.Photo.Id">Cancel</a>
    </div>
</form>
