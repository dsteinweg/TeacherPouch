@model QuestionCreateViewModel

@{
    ViewBag.Title = "Create Question";
}

<section id="question-edit" class="question-details">
    <header><h2>Create Question</h2></header>

    <div>
        <div>@Html.PhotoThumb(Model.Photo)</div>

        <div style="margin-top:10px;">
            <tag-buttons tags="@Model.PhotoTags">
            @{
                //Html.RenderPartial(MVC.Tags.Views._TagButtons, Model.PhotoTags);
            }
        </div>
    </div>

    <div>@Html.ValidationSummary()</div>

    <form asp-controller="Questions" asp-action="QuestionCreate" method="POST">
        <div class="form-group">
            <label asp-for="@Model.QuestionText"></label>
            <textarea asp-for="@Model.QuestionText"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.QuestionSentenceStarters"></label>
            <textarea asp-for="@Model.QuestionSentenceStarters"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.QuestionOrder">
                <input asp-for="@Model.QuestionOrder">
            </label>
        </div>

        <div class="form-group">
            <button type="submit">Save</button> |
            <a href="@Url.PhotoDetails(Model.Photo)">Cancel</a>
        </div>
    </form>
</section>
