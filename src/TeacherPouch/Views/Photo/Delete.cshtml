@model PhotoDeleteViewModel

@{
    ViewBag.Title = "Delete Photo: " + @Model.Name;
}

<div class="page-photo-delete">
    <header class="page-header" style="margin-top: 0;">
        <h1>Delete Photo: @Model.Name</h1>
    </header>

    <div class="alert alert-warning">Are you sure you want to delete this photo?</div>

    <div class="form-group">
        <img src="@Model.PhotoUrl">

        <div>
            @Html.Partial("_TagButtons", Model.Tags)
        </div>
    </div>

    <div class="form-group">
        <form asp-action="Delete">
            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-remove"></span> Delete
            </button>
            <a asp-route="photo-details"
                asp-route-id="@Model.Id"
                asp-route-name="@Model.Name"
                class="btn btn-link">Cancel</a>
        </form>
    </div>
</div>
