@model PhotoEditViewModel

@{
    ViewBag.Title = "Edit Photo";
}

<div id="editPhoto">
    <header>
        <h1>@Model.Name</h1>
        <h2>Edit</h2>
    </header>

    <form asp-action="Edit">
        <div>
            <img src="@Model.PhotoUrl" asp-append-version="true">
        </div>

        <div>
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name"></input>
        </div>

        <div>
            <label asp-for="@Model.IsPrivate"></label>
            <input asp-for="@Model.IsPrivate"></input>
        </div>

        <div id="tags">
            <label asp-for="@Model.Tags"></label>
            <textarea asp-for="@Model.Tags"></textarea>
        </div>

        <div>
            <input type="submit" value="Save" /> |
            <a asp-action="Details">Cancel</a>
        </div>

        <div asp-validation-summary="true"></div>
    </form>
</div>
