@model PhotoEditViewModel

@{
    ViewBag.Title = "Edit Photo: " + @Model.Name;
}

<div class="page-photo-edit">
    <header class="page-header" style="margin-top: 0;">
        <h1>Edit Photo: @Model.Name</h1>
    </header>

    <form asp-action="Edit">
        <div class="form-group">
            <img src="@Model.PhotoUrl">
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Private" class="control-label">
                    <input asp-for="Private"> Private
                </label>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Tags" class="control-label"></label>
            <textarea asp-for="Tags" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk"></span> Save
            </button>
            <a asp-route="photo-details" asp-route-id="@Model.Id" asp-route-name="@Model.Name" class="btn btn-link">
                Cancel
            </a>
        </div>

        <div asp-validation-summary="All"></div>
    </form>
</div>
