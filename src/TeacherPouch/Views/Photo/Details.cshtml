@model PhotoDetailsViewModel

@{
    ViewBag.Title = "Photo Details";
}

<div id="photoDetails">
    <header>
        <h1>@Model.Photo.Name</h1>
    </header>

    <div class="row photo-details-slider">
        @if (Model.PreviousPhoto != null)
        {
            <div class="prev-arrow col-xs-2 col-sm-1">
                <a asp-action="Details"
                   asp-route-id="@Model.NextPhoto.Id"
                   asp-route-tag="@Model.SearchResultTag.Name"
                   asp-route-tag2="@Model.SearchResultTag2.Name">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
            </div>
        }

        <div class="photo col-xs-8 col-sm-10">
            <div class="photo-thumb">
                <img src="@Model.PhotoUrl" class="img-responsive center-block">
            </div>
        </div>

        @if (Model.NextPhoto != null)
        {
            <div class="next-arrow col-xs-2 col-sm-1">
                <a asp-action="Details"
                   asp-route-id="@Model.NextPhoto.Id"
                   asp-route-tag="@Model.SearchResultTag.Name"
                   asp-route-tag2="@Model.SearchResultTag2.Name">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        }
    </div>

    <div>
        @Html.Partial("_TagButtons", Model.PhotoTags)
    </div>

    @if (Model.Questions.Any())
    {
        <section>
            <header>
                <h1>Questions</h1>
            </header>

            <ul>
                @foreach (var question in Model.Questions)
                {
                    <li class="question">
                        @if (Model.ShowAdminLinks)
                        {
                            <div class="preserve-newline">
                                <a asp-controller="Question"
                                   asp-action="Details"
                                   asp-route-id="@question.Id">@question.Text</a>
                            </div>
                        }
                        else
                        {
                            <div class="preserve-newline">@question.Text</div>
                        }
                        <div class="question-starter preserve-newline">@question.SentenceStarters</div>
                    </li>
                }
            </ul>
        </section>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <div>
            @if (Model.Photo.IsPrivate)
            {
                <span>Is Private: <strong>Yes</strong></span>
            }
            else
            {
                <span>Is Private: No</span>
            }
        </div>
    }

    <div id="download">
        Download this photo:
        <span class="download-link">
            <a asp-action="Download" class="btn btn-default">
                <span class="glyphicon glyphicon-save"></span>Small
                <span class="file-size">(@Model.SmallFileSize)</span>
            </a>
        </span>
        <span class="download-link">
            <a asp-action="Download" class="btn btn-default">
                <span class="glyphicon glyphicon-save"></span>Large
                <span class="file-size">(@Model.LargeFileSize)</span>
            </a>
        </span>
    </div>

    @if (Model.ShowAdminLinks)
    {
        <div>
            <a asp-controller="Question" asp-action="Create" asp-route-photo-id="@Model.Photo.Id">Create Question</a>
        </div>

        <div>
            <a asp-action="Edit">Edit</a> |
            <a asp-action="Delete">Delete</a> |
            <a asp-action="Index">Photo Index</a>
        </div>
    }
</div>
