@model IEnumerable<Tag>

@{
    ViewBag.Title = "Tag Index";
}

<div class="page-tag-index">
    <header class="page-header" style="margin-top: 0;">
        <h1>Tag Index</h1>
    </header>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="form-group">
            <a asp-action="Create" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> Create New Tag
            </a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-default">
                <span class="glyphicon glyphicon-home"></span> Admin Home
            </a>
        </div>
    }

    <div class="form-group">
        <label class="control-label">Total Tag Count</label>
        <p class="form-control-static">@Model.Count()</p>
    </div>

    <div>
        @Html.Partial("_TagButtons", Model)
    </div>
</div>
